{% extends 'base.html.twig' %}

{% block title %}{{player.name}}{% endblock %}
{% block body %}
<h1 class="title"> There is some general informations about {{ player.name }} : </h1>
<br/>
<div class="content">
    <div class="numbers-players">
        <div class="big-number">
            <img src="{{ asset('build/images/power.jpg') }}">
            <p> {{ player.galacticalPuissance | number_format('0',',',' ') }} galactical power  </p>
        </div>
        <div class="big-number">
            <img src="{{ asset('build/images/blaster.png') }}">
            <p> {{ player.characters | length }} hero(es) </p> <small>({{ player.charactersGalacticalPuissance | number_format('0',',',' ') }} heroes galactical power)</small> </p>
        </div>
        <div class="big-number">
            <img src="{{ asset('build/images/spaceship.png') }}">
            <p> {{ player.ships | length }} ship(s) </p> <small>({{ player.shipsGalacticalPuissance | number_format('0',',',' ') }} ships galactical power)</small> </p>
        </div>
        <br/>
        <br/>
    </div>
    <div class="list-heroes">
        <h2 class="h2"> {{ player.name }} Heroes </h2>
        <table id="table-heroes" class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" id="th-0"> Name </th>
                    <th scope="col" id="th-0"> Rarity </th>
                    <th scope="col" id="th-0"> Level </th>
                    <th scope="col" id="th-0"> Gear level </th>
                    <th scope="col" id="th-0"> Relic level </th>
                    <th scope="col" id="th-1"> Galactical Power </th>
                </tr>
            </thead>
            <tbody>
                {% for playerUnit in player.characters %}
                <tr>
                    <td>{{ playerUnit.hero.name }}</td>
                    <td>{{ playerUnit.numberStars }}</td>
                    <td>{{ playerUnit.level }}</td>
                    <td>{{ playerUnit.gearLevel }}</td>
                    <td>{{ playerUnit.relicLevel }}</td>
                    <td>{{ playerUnit.galacticalPuissance }}</td>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="list-ships">
        <h2 class="h2"> {{ player.name }} Ships </h2>
        <table id="table-ships" class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" id="th-0"> Name </th>
                    <th scope="col" id="th-0"> Rarity </th>
                    <th scope="col" id="th-0"> Level </th>
                    <th scope="col" id="th-1"> Galactical Power </th>
                </tr>
            </thead>
            <tbody>
                {% for playerUnit in player.ships %}
                <tr>
                    <td>{{ playerUnit.ship.name }}</td>
                    <td>{{ playerUnit.numberStars }}</td>
                    <td>{{ playerUnit.level }}</td>
                    <td>{{ playerUnit.galacticalPuissance }}</td>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}