{% extends 'base.html.twig' %}

{% block title %}{{player.name}}{% endblock %}
{% block body %}
<h1 class="title"> Informations générales concernant le joueur {{ player.name }} : </h1>
<br/>
<div class="content">
    <div class="numbers-players">
        <div class="big-number">
            <img src="{{ asset('build/images/power.jpg') }}">
            <p> {{ player.galacticalPuissance | number_format('0',',',' ') }} puissance galactique  </p>
        </div>
        <div class="big-number">
            <img src="{{ asset('build/images/blaster.png') }}">
            <p> {{ player.characters | length }} héro(s) </p> <small>(Puissance galactique de tout ses héros : {{ player.charactersGalacticalPuissance | number_format('0',',',' ') }})</small> </p>
        </div>
        <div class="big-number">
            <img src="{{ asset('build/images/spaceship.png') }}">
            <p> {{ player.ships | length }} vaisseaux </p> <small>(Puissance galactique de tout ses vaisseaux : {{ player.shipsGalacticalPuissance | number_format('0',',',' ') }})</small> </p>
        </div>
        <br/>
        <br/>
    </div>
    <div class="list-heroes">
        <h2 class="h2"> {{ player.name }} Héro(s) </h2>
        <table id="table-heroes" class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" id="th-0"> Nom </th>
                    <th scope="col" id="th-0"> Nombre d'étoile </th>
                    <th scope="col" id="th-0"> Niveau </th>
                    <th scope="col" id="th-0"> Niveau d'équipement </th>
                    <th scope="col" id="th-0"> Niveau de relique </th>
                    <th scope="col" id="th-1"> Puissance galactique </th>
                </tr>
            </thead>
            <tbody>
                {% for playerUnit in player.characters %}
                <tr>
                    <td>{{ playerUnit.hero.name }}</td>
                    <td>{{ playerUnit.numberStars }}</td>
                    <td>{{ playerUnit.level }}</td>
                    <td>{{ playerUnit.gearLevel }}</td>
                    <td>{{ playerUnit.relicLevel }}</td>
                    <td>{{ playerUnit.galacticalPuissance }}</td>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="list-ships">
        <h2 class="h2"> {{ player.name }} Vaisseaux </h2>
        <table id="table-ships" class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" id="th-0"> Nom </th>
                    <th scope="col" id="th-0"> Nombre d'étoile </th>
                    <th scope="col" id="th-0"> Niveau </th>
                    <th scope="col" id="th-1"> Puissance galactique </th>
                </tr>
            </thead>
            <tbody>
                {% for playerUnit in player.ships %}
                <tr>
                    <td>{{ playerUnit.ship.name }}</td>
                    <td>{{ playerUnit.numberStars }}</td>
                    <td>{{ playerUnit.level }}</td>
                    <td>{{ playerUnit.galacticalPuissance }}</td>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}