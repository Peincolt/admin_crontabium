{% extends 'base.html.twig' %}

{% block title %}Crontabium - joueurs{% endblock %}
{% block body %}
<h1 class="title"> Informations générales concernant les joueurs </h1>
<br/>
<div class="content">
    <div class="numbers-players">
        <div class="big-number">
            <img src="{{ asset('build/images/people.png') }}" class="img-big-number">
            <br/>{{ guildMembers }} joueur(s)
        </div>
        <div class="big-number">
            <img src="{{ asset('build/images/blaster.png') }}">
            <p> {{ guildNumberHeroes }} héro(s) </p> <small>(Puissance galactique de tous les héros réunis : {{ guildHeroesGp | number_format('0',',',' ') }})</small> </p>
        </div>
        <div class="big-number">
            <img src="{{ asset('build/images/spaceship.png') }}">
            <p> {{ guildNumberShips }} vaisseaux </p> <small>(Puissance galactique de tous les vaisseaux réunis : {{ guildShipsGp | number_format('0',',',' ') }})</small> </p>
        </div>
        <br/>
        <br/>
    </div>
    <div class="list-players">
        <h2 class="h2"> Informations concernant les joueurs </h2>
        <table id="table-players" class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" id="th-0"> Nom </th>
                    <th scope="col" id="th-1"> Puissance galactique </th>
                    <th scope="col" id="th-2"> Puissance galactique des héros </th>
                    <th scope="col" id="th-3"> Puissance galactique des vaisseaux </th>
                </tr>
            </thead>
            <tbody>
            {% for player in players %}
                <tr>
                    <td><a href="{{ path('player_viewer',{'name':player.name}) }}"> {{ player.name }}</a></td>
                    <td><a href="{{ path('player_viewer',{'name':player.name}) }}"> {{ player.galacticalPuissance | number_format('0',',',' ') }}</a></td>
                    <td><a href="{{ path('player_viewer',{'name':player.name}) }}"> {{ player.charactersGalacticalPuissance | number_format('0',',',' ') }}</a></td>
                    <td><a href="{{ path('player_viewer',{'name':player.name}) }}"> {{ player.shipsGalacticalPuissance | number_format('0',',',' ') }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}