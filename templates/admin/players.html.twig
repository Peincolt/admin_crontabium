{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}
{% block body %}
<h1 class="title"> There is some general informations about the players : </h1>
<br/>
<div class="content">
    <div class="numbers">
        <div class="big-number">
            <img src="{{ asset('build/images/people.png') }}" class="img-big-number">
            <br/>{{ guildMembers }} player(s)
        </div>
        <div class="big-number">
            <img src="{{ asset('build/images/blaster.png') }}">
            <p> {{ guildNumberHeroes }} hero(es) </p> <small>({{ guildHeroesGp | number_format('0',',',' ') }} heroes galactical power)</small> </p>
        </div>
        <div class="big-number">
            <img src="{{ asset('build/images/spaceship.png') }}">
            <p> {{ guildNumberShips }} ship(s) </p> <small>({{ guildShipsGp | number_format('0',',',' ') }} ships galactical power)</small> </p>
        </div>
        <br/>
        <br/>
        <p> If you want more details about heroes or ships, you can go here </p>
    </div>
    <div class="list-players">
        <h2 class="h2"> Players informations </h2>
        <table id="table-players" class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" id="th-0"> Name </th>
                    <th scope="col" id="th-1"> Galactical Power </th>
                    <th scope="col" id="th-2"> Heroes Galactical Power </th>
                    <th scope="col" id="th-3"> Ships Galactical Power </th>
                </tr>
            </thead>
            {% for player in players %}
            <tr>
                <td> {{ player.name }} </td>
                <td> {{ player.galacticalPuissance | number_format('0',',',' ') }} </td>
                <td> {{ player.charactersGalacticalPuissance | number_format('0',',',' ') }} </td>
                <td> {{ player.shipsGalacticalPuissance | number_format('0',',',' ') }} </td>
            </tr>
            {% endfor %}
        </table>
    </div>
</div>
{% endblock %}