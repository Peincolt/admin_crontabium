{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}
{% block body %}
<h1 class="title"> There is some general informations about your guild : {{guild.name}} </h1>
<br/>
<div class="content">
    <div class="numbers">
        <div class="big-number">
            <img src="{{ asset('build/images/people.png') }}" class="img-big-number">
            <br/>{{ guild.members }} player(s)
        </div>
        <div class="big-number">
            <img src="{{ asset('build/images/bb8.png') }}">
            <p> {{ players | length }} swgoh.gg profil(s) </p>
        </div>
        <div class="big-number">
            <img src="{{ asset('build/images/power.jpg') }}">
            <p> {{ guild.galacticalPuissance | number_format('0',',',' ') }} galactical power  </p>
        </div>
        <div class="big-number">
            <img src="{{ asset('build/images/blaster.png') }}">
            <p> {{ guildHeroesGp | number_format('0',',',' ') }} heroes galactical power </p>
        </div>
        <div class="big-number">
            <img src="{{ asset('build/images/spaceship.png') }}">
            <p> {{ guildShipsGp | number_format('0',',',' ') }} ships galactical power </p>
        </div>
    </div>
    <div class="list-players">
        <h2 class="h2"> Players informations </h2>
        <table id="table-players" class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" id="th-0"> Name </th>
                    <th scope="col" id="th-1"> Galactical Power </th>
                    <th scope="col" id="th-2"> Heroes Galactical Power </th>
                    <th scope="col" id="th-3"> Ships Galactical Power </th>
                </tr>
            </thead>
            {% for player in players %}
            <tr>
                <td><a href="{{ path('player_viewer',{'name':player.name}) }}"> {{ player.name }}</a></td>
                <td><a href="{{ path('player_viewer',{'name':player.name}) }}"> {{ player.galacticalPuissance | number_format('0',',',' ') }}</a></td>
                <td><a href="{{ path('player_viewer',{'name':player.name}) }}"> {{ player.charactersGalacticalPuissance | number_format('0',',',' ') }}</a></td>
                <td><a href="{{ path('player_viewer',{'name':player.name}) }}"> {{ player.shipsGalacticalPuissance | number_format('0',',',' ') }}</a></td>
            </tr>
            {% endfor %}
        </table>
    </div>
</div>
{% endblock %}
