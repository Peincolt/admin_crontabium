{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}
{% block body %}
<h1 class="title"> There is some general informations about your guild : {{guild.name}} </h1>
<br/>
<div class="content">
    <div class="numbers">
        <div class="big-number">
            <img src="{{ asset('build/images/people.png') }}" class="img-big-number">
            <br/>{{ guild.members }} player(s)
        </div>
        <div class="big-number">
            <img src="{{ asset('build/images/bb8.png') }}">
            <p> {{ players | length }} swgoh.gg profil(s) </p>
        </div>
        <div class="big-number">
            <img src="{{ asset('build/images/power.jpg') }}">
            <p> {{ guild.galacticalPuissance | number_format('2',',',' ') }} galactical power  </p>
        </div>
        <div class="big-number">
            <img src="{{ asset('build/images/blaster.png') }}">
            <p> {{ guildHeroesGp | number_format('2',',',' ') }} heroes galactical power </p>
        </div>
        <div class="big-number">
            <img src="{{ asset('build/images/spaceship.png') }}">
            <p> {{ guildShipsGp | number_format('2',',',' ') }} ships galactical power </p>
        </div>
    </div>
    <div class="list-players">
    <h2 class="h2"> Players informations </h2>
    <table>
        <thead>
            <tr>
                <td> Name </td>
                <td> Galactical Power </td>
                <td> Heroes Galactical Power </td>
                <td> Ships Galactical Power </td>
            </tr>
        </thead>
        {% for player in players %}
        <tr>
            <td> {{ player.name }} </td>
            <td> {{ player.galacticalPuissance }} </td>
            <td> {{ player.charactersGalacticalPuissance}} </td>
            <td> {{ player.shipsGalacticalPuissance }} </td>
        </tr>
        {% endfor %}
    </table>
    </div>
</div>
{% endblock %}
