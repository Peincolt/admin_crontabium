{% extends 'base.html.twig' %}
{% block title %}User - list{% endblock %}
{% block body %}
<h1 class="title"> Liste des utilisateurs </h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Nom d'utilisateur</th>
            <th>Email</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td>
                <a href="{{ path('user_edit',{'id':user.id}) }}">{{ user.username }}</a>
            </td>
            <td>
                <a href="{{ path('user_edit',{'id':user.id}) }}">{{ user.email }}</a>
            </td>
            <td>
                <a href="{{ path('user_edit',{'id':user.id}) }}">{% for role in user.roles %}{{ role }}{% endfor %}</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}