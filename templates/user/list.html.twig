{% extends 'base.html.twig' %}
{% block title %}User - list{% endblock %}
{% block body %}
<h1> Liste des utilisateurs </h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Pseudo</th>
            <th>Email</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
        <tr>
            <td>
                <a href="{{ path('user_edit',{'id':user.id}) }}">{{ user.username }}</a>
            </td>
            <td>
                <a href="{{ path('user_edit',{'id':user.id}) }}">{{ user.email }}</a>
            </td>
            <td>
                <a href="{{ path('user_edit',{'id':user.id}) }}">
                <!-- regarder la fonction concat de twig -->
                    {% for role in user.roles %}
                        {{ role }}
                    {% endfor %}
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}