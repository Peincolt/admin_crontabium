{% form_theme formUser 'Form/form_errors.html.twig' %}
{% extends 'base.html.twig' %}
{% block title %}Create User{% endblock %}
{% block body %}
    <div class = "content">
        <div class="header">
            <h1 class="title"> Create an  account </h1>
        {{ form_start(formUser) }}
        <div class="form-group">
            {{ form_label(formUser.email,null,{'label_attr' : {'class' : 'form-label'}}) }}
            {{ form_errors(formUser.email) }}
            {{ form_widget(formUser.email, {'attr' : {'class' : 'form-control input-form'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(formUser.roles,'',{'label_attr' : {'class' : 'form-label'}}) }}
            {{ form_errors(formUser.roles) }}
            {{ form_widget(formUser.roles, {'attr' : {'class' : 'form-control form-select' }}) }}
        </div>
        <div class="form-group">
            <input type="submit" name="submit" value="Submit" class="btn btn-submit">
        </div>
        {{ form_end(formUser) }}
    </div>
{% endblock %}